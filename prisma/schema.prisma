// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth models (official schema)
model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?

  accounts      Account[]
  sessions      Session[]

  // Example app model relation
  tasks         Task[]
  events        Event[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Example app model to prove DB works
model Task {
  id        String   @id @default(cuid())
  title     String
  done      Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  intensity   Int
  importance  Int
  emotions String[] @default([])
  physicalSensations String[] @default([])
  tags String[] @default([])
  images String[] @default([])
  category           String?
  verificationStatus String @default("Pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation to User
  userId String
  user   User     @relation(fields: [userId], references: [id])

  logics    Logic[]

  // Self-relation: parent event / sub-events
  parentEventId String?
  parentEvent   Event?   @relation("EventSubEvents", fields: [parentEventId], references: [id], onDelete: SetNull)
  subEvents     Event[]  @relation("EventSubEvents")
}

model Logic {
  id          String   @id @default(cuid())
  title       String   @default("")
  description String   @default("")
  importance  Int       // 1â€“10 rating
  status      String
  facts       String    // paragraph
  assumptions String    // paragraph
  patterns    String    // paragraph
  actions     String    // paragraph

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relationship: each Logic belongs to one Event
  eventId     String
  event       Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
}


